<!doctype html>
<html>
<head>
    <title>Fit Foodie</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="/style.css">
</head>
<body>
  <header>
    <div id="container">
      <nav>
        <ul id="list">
          <li id="top"><a href="/bmi">BMI Calculator</a></li>
          <li id="top"><a href="/profile">Calculate Calories</a></li>
          <li id="top"><a href="/userinfo">Saved Meals</a></li>
          <li id="top"><a href="/userprofile">User Profile</a></li>
          <li id="top"><a href="/">Sign Out</a></li>
        </ul>
      </nav>
    </div>
  </header>
<div class="container">

    <div class="page-header text-center">
        <h1> Profile Page</h1>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    <div class="row">

        <!-- LOCAL INFORMATION -->
        <div class="col-sm-6">
            <div class="well">
                <h3><span class="fa fa-user"></span> Local</h3>

                <% if (user.local.email) { %>
                  <input id="editInput" type="text" value=<%= user.local.email %>
                    <p>
                        <button class="edit" id="editButton">Edit</button>
                    </p>
                      <!-- <button class="edit" id="editButton">Edit</button> -->
                <% } else { %>
                    <a href="/connect/local" class="btn btn-default">Connect Local</a>
                <% } %>


</div>
</div>
</div>

<script src="/main.js"></script>

</body>
</html>
